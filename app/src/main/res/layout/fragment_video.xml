<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.Home"
    android:background="@drawable/gradient_background">

    <ImageView
        android:id="@+id/trailer_image"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/trailer"
        android:scaleType="centerCrop"/>

    <ScrollView
        android:id="@+id/scrollView_Home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/trailer_image"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                >


                <RelativeLayout
                    android:id="@+id/layout_title_trending_movie_week"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    >

                    <TextView
                        android:id="@+id/title_trending_movies_week"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="21sp"
                        android:text="@string/trending_movies_week"
                        android:textColor="@color/black"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/show_more"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textSize="10sp"
                        android:textColor="@color/black"/>

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_popular_movies_week_trailers"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:paddingBottom="0dp" />
                    android:layout_height="200dp"
                    android:paddingBottom="5dp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                >


                <RelativeLayout
                    android:id="@+id/layout_latest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginBottom="5dp"
                    >

                    <TextView
                        android:id="@+id/title_latest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/latest_movies"
                        android:textColor="@color/black"
                        android:textSize="21sp"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/show_more"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textSize="10sp"
                        android:textColor="@color/black"/>

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/latest_rv"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:paddingBottom="5dp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                >


                <RelativeLayout
                    android:id="@+id/layout_upcoming"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginBottom="5dp"
                    >

                    <TextView
                        android:id="@+id/title_upcoming"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/upcoming_movies"
                        android:textColor="@color/black"
                        android:textSize="21sp"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/show_more"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textSize="10sp"
                        android:textColor="@color/black"/>

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/upcoming_rv"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:paddingBottom="5dp" />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:orientation="vertical"
                >


                <RelativeLayout
                    android:id="@+id/layout_title_series"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginBottom="5dp"
                    >

                    <TextView
                        android:id="@+id/title_popular_series"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="21sp"
                        android:text="@string/popular_movies"
                        android:textColor="@color/black"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/show_more"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textSize="10sp"
                        android:textColor="@color/black"/>

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_popular_movies"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:paddingBottom="5dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:orientation="vertical"
                >


                <RelativeLayout
                    android:id="@+id/layout_title_horror_movie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:layout_marginBottom="5dp"
                    >

                    <TextView
                        android:id="@+id/title_horror_movie"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="21sp"
                        android:text="@string/horror_movies"
                        android:textColor="@color/black"
                        android:layout_marginBottom="10dp"
                        />

                    <TextView
                        android:id="@+id/more_horror_movies"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/show_more"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textSize="10sp"
                        android:textColor="@color/black"/>

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_horror_movie"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:paddingBottom="5dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:orientation="vertical"
                >


                <RelativeLayout
                    android:id="@+id/layout_title_action_movie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:layout_marginBottom="5dp"
                    >

                    <TextView
                        android:id="@+id/title_action_movie"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="21sp"
                        android:text="@string/action_movies"
                        android:textColor="@color/black"
                        android:layout_marginBottom="10dp"
                        />

                    <TextView
                        android:id="@+id/more_action_movies"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/show_more"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textSize="10sp"
                        android:textColor="@color/black"/>

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_action_movie"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:paddingBottom="5dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:orientation="vertical"
                >


                <RelativeLayout
                    android:id="@+id/layout_title_comedy_movie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:layout_marginBottom="5dp"
                    >

                    <TextView
                        android:id="@+id/title_comedy_movie"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="21sp"
                        android:text="@string/comedy_movies"
                        android:textColor="@color/black"
                        android:layout_marginBottom="10dp"
                        />

                    <TextView
                        android:id="@+id/more_comedy_movies"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/show_more"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textSize="10sp"
                        android:textColor="@color/black"/>

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_comedy_movie"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:paddingBottom="5dp"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:orientation="vertical"
                >


                <RelativeLayout
                    android:id="@+id/layout_title_drama_movie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:layout_marginBottom="5dp"
                    >

                    <TextView
                        android:id="@+id/title_drama_movie"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="21sp"
                        android:text="@string/drama_movies"
                        android:textColor="@color/black"
                        android:layout_marginBottom="10dp"
                        />

                    <TextView
                        android:id="@+id/more_drama_movies"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/show_more"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textSize="10sp"
                        android:textColor="@color/black"/>

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_drama_movie"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:paddingBottom="5dp"
                    />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:orientation="vertical"
                >


                <RelativeLayout
                    android:id="@+id/layout_title_romance_movie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:layout_marginBottom="5dp"
                    >

                    <TextView
                        android:id="@+id/title_romance_movie"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="21sp"
                        android:text="@string/romance_movies"
                        android:textColor="@color/black"
                        android:layout_marginBottom="10dp"
                        />

                    <TextView
                        android:id="@+id/more_romance_movies"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/show_more"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textSize="10sp"
                        android:textColor="@color/black"/>

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_romance_movie"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:paddingBottom="5dp"
                    />

            </LinearLayout>



        </LinearLayout>

    </ScrollView>

</RelativeLayout>